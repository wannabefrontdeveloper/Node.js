<div class="container">  
	<% if(value === 'D') { %>
			 <div class="container">   
					 <form action="/board/detail/<%= board[0].board_id %>/<%= pNum %>" method="post">
								<!-- type_id를 폼 안에 추가 -->
								<input type="hidden" name="board_id" value="<%= board[0].board_id %>">
								<input type="hidden" name="pNum" value="<%= pNum %>">
								<div class="mb-3">
										<label class="form-label" for="title">제목</label> 
										<input class="form-control" type="text" name="title" value="<%= board[0].title %>" style="width:300px;" disabled/>
								</div>
								<div class="mb-3">
										<label class="form-label" for="loginid">작성자</label> 
										<input class="form-control" type="text" name="who" value="<%= who %>" style="width:300px;" disabled/>
								</div>
								<div class="mb-3">
										<label class="form-label" for="date">작성일</label> 
										<input class="form-control" type="text" value="<%= board[0].date %>" style="width:300px;" disabled/>
								</div>
								<div class="mb-3">
										<label class="form-label" for="content">내용</label> 
										<textarea class="form-control" name="content" style="width:800px;height: 200px; "disabled><%= board[0].content %></textarea>
								</div>
								<div class="col-md-12 text-end">
										<a href="/board/view/<%= board[0].type_id %>/<%= pNum %>">
												 <button type="button" class="btn btn-info me-md-2">목록</button>
										</a>
										<a href="/board/update/<%= board[0].board_id %>/<%= board[0].type_id %>/<%= pNum %>">
												 <button type="button" class="btn btn-info me-md-2">수정</button>
										</a>
										<a href="/board/delete/<%= board[0].board_id %>/<%= board[0].type_id %>/<%= pNum %>" onclick="return confirmDelete()">
											 <button type="button" class="btn btn-info me-md-2">삭제</button>
									</a>
								</div>
					 </form>
			 </div>
	<% } else if (value === 'CR') { %>
			 <div class="container">   
					 <h2>생성</h2>
					 <form action="/board/create_process" method="post">
								<!-- type_id를 폼 안에 추가 -->
								<input type="hidden" name="type_id" value="<%= typeId %>">
								<input type="hidden" name="name" value="<%= name %>">
					 
								<div class="mb-3">
										<label class="form-label" for="title">제목</label> 
										<input class="form-control" type="text" name="title" style="width:300px;" />
								</div>
								<div class="mb-3">
										<label class="form-label" for="loginid">작성자</label> 
										<input class="form-control" type="text" name="loginid" value="<%= who %>" style="width:300px;" disabled/>
								</div>
								<div class="mb-3">
										<label class="form-label" for="content">내용</label> 
										<textarea class="form-control" name="content" style="width:800px;height: 200px;"></textarea>
								</div>
								<div class="mb-3">
										<label class="form-label" for="password">갱신삭제시 비밀번호</label> 
										<input class="form-control" type="text" name="password" style="width:300px;" />
								</div>
								
								<button class="btn btn-outline-primary btn-sm" type="submit">생성</button>
					 </form>
			 </div>
	<% } else if (value === 'U')  { %>
			 <div class="container">   
				<form action="/board/update_process" method="post">
					 <!-- type_id를 폼 안에 추가 -->
					 <input type="hidden" name="board_id" value="<%= board[0].board_id %>">
					 <input type="hidden" name="type_id" value="<%= board[0].type_id %>">
					 <input type="hidden" name="pNum" value="<%= pNum %>">
					 <div class="mb-3">
							<label class="form-label" for="title">제목</label> 
							<input class="form-control" type="text" name="title" value="<%= board[0].title %>" style="width:300px;"/>
					 </div>
					 <div class="mb-3">
							<label class="form-label" for="loginid">작성자</label> 
							<input class="form-control" type="text" name="who" value="<%= who %>" style="width:300px;" disabled/>
					 </div>
					 <div class="mb-3">
							<label class="form-label" for="date">작성일</label> 
							<input class="form-control" type="text" value="<%= board[0].date %>" style="width:300px;"/>
					 </div>
					 <div class="mb-3">
							<label class="form-label" for="content">내용</label> 
							<textarea class="form-control" name="content" style="width:800px;height: 200px;"><%= board[0].content %></textarea>
					 </div>
					 <button class="btn btn-outline-primary btn-sm" type="submit">수정</button>
				</form>
		 </div>
	<% } %>
	<script>
	 function confirmDelete() {
			var confirmDelete = confirm("삭제하시겠습니까?");
			return confirmDelete;
	 }
</script>
</div>